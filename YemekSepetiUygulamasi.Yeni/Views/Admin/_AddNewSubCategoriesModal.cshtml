@model SubCategoryCategoryModel


<form asp-controller="Admin" asp-action="AddNewSubCategories" method="post">
    <div class="modal fade" id="NewSubCategoryModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add Sub Cagetory</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="@Model.SubCategoryName"></label>
                        <input asp-for="@Model.SubCategoryName" class="form-control" required="required" />
                    </div>

                    @*<div class="form-group">
                        <label asp-for="@Model.CategoryId"></label>
                        <input asp-for="@Model.CategoryId" class="form-control" />
                    </div>*@
                    <div class="form-group">
                        <label asp-for="@Model.CategoryName" ></label>
                            <select asp-for="CategoryId" required="required" class="form-control col-md-7 col-xs-12" asp-items="@ViewBag.CategoryList">
                                <option>Please Select A Category</option>
                            </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
</form>