@model IEnumerable<YemekSepetiUygulamasi.Entity.EntityTable.Comment>
@{
    ViewBag.Title = "Yorumlar";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/fontawesome-free/css/all.min.css" rel="stylesheet" />
<script src="~/Content/fontawesome-free/js/all.js"></script>
<script src="~/Content/fontawesome-free/js/all.min.js"></script>
<script src="~/Content/fontawesome-free/js/fontawesome.min.js"></script>

<div class="table-responsive-xl">
    <table class="table table-striped table-advance table-hover  ">

        <tr>

            <th class="col-md-5">Yorum</th>
            <th class="col-md-1">Yorum Yapan Üye</th>
            <th class="col-md-2">Servis Ort Puan</th>
            <th class="col-md-2">Hız Ort Puan</th>
            <th class="col-md-1">Lezzet Puan</th>
            <th>Yıldız Sayısı</th>
            <th>Yorum Onaylandı mı</th>
            <th>Ürün Bilgisi</th>
            
            <th>Onay</th>
            <th>Sil</th>
        </tr>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                <td scope="row">@item.Comments</td>
                <td>@item.CustomerId</td>
                <td>@item.Service</td>
                <td>@item.Speed</td>
                <td>@item.Flavor</td>

                <td>@item.CommentNumberStarts</td>
                <td>@item.CommentConfirm</td>
                @if (item.ProductId != null)
                {
                    <td>@item.</td>
                }
                @if (item.MenusId != null)
                {
                    <td>@item.MenusId</td>
                }
                @if (item.CampaignProductId != null)
                {
                    <td>@item.CampaignProductId</td>
                }
                <td>

                    <a class="btn btn-block btn-login-with" title="incele" href="/Admin/Anasayfa/Incele/@item.Id"><i class="fas fa-search-plus fa-2x "></i></a>


                </td>
                <td>
                    <a class="btn btn-danger" title="düzenle" href="/Admin/Anasayfa/Duzenle/@item.Id"><i class="fas fa-edit fa-2x "></i></a>
                </td>

            </tr>
            }
        </tbody>



    </table>

</div>
