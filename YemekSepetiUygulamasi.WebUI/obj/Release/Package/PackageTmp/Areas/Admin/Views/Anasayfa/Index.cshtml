@model YemekSepetiUygulamasi.Entity.EntityTable.Companies
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/fontawesome-free/css/all.min.css" rel="stylesheet" />
<script src="~/Content/fontawesome-free/js/all.js"></script>
<script src="~/Content/fontawesome-free/js/all.min.js"></script>
<script src="~/Content/fontawesome-free/js/fontawesome.min.js"></script>

<div class="table-responsive-xl">
    <table class="table table-striped table-advance table-hover  " >
   
        <tr>

            <th class="col-md-2">Kurum Adı</th>
            <th class="col-md-1">Servis Süresi</th>
            <th class="col-md-2">Min Paket Tutarı</th>
            <th class="col-md-2">Servis Ort Puan</th>
            <th class="col-md-2">Hız Ort Puan</th>
            <th class="col-md-1">Lezzet Puan</th>

            <th class="col-md-2">Ödeme Seçenekleri</th>
            <th >İncele</th>
            <th>Düzenle</th>
        </tr>
        <tbody>
     
            <tr>

                <td scope="row">@Model.CompanyName</td>
                <td>@Model.CompanyServiceTime</td>
                <td >@Model.MinimumPackagePrice</td>
                <td >@Model.ServicePoint</td>
                <td >@Model.SpeedPoint</td>
                <td>@Model.FlavorPoint</td>

                <td>@Model.PaymentOptionsId.ToUpper()</td>
                
                <td>

                    <a class="btn btn-block btn-login-with"  title="incele" href="/Admin/Anasayfa/Incele/@Model.Id"><i class="fas fa-search-plus fa-2x "></i></a>


                </td>
                <td>
                    <a class="btn btn-danger"  title="düzenle"  href="/Admin/Anasayfa/Duzenle/@Model.Id"><i class="fas fa-edit fa-2x "></i></a>
                </td>

            </tr>

        </tbody>



    </table>

</div>
