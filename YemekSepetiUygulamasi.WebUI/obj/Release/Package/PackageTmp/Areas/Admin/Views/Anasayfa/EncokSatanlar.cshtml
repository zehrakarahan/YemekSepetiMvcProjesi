</head>
<body>
    <div class="row">
        <div class="col-md-12">

            <iv class="panel panel-default">
                <header class="panel-heading">
                    <div style="float:left;  font-size:20px;">
                        Satılan Ürün Bilgileri
                    </div>
                 
                    <br />
                </header>
                <br /><br /><br />
               
              
                <h3>Satılan Ürünler ve Sayısı</h3>
                
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="demoGrid11">
                            <thead>
                                <tr>
                                   
                                    <th>Ürün Adı</th>
                                    <th>Ürün Fiyatı</th>
                                    <th class="noExcel">Ürün Yıldız Sayısı</th>
                                    <th>Ürün Satış Miktarı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i=0;i<Model.Productlist.Count();i++)
                                {
                                    <tr class="odd gradeX">
                                     
                                        <td>@Model.Productlist[i].Pname</td>
                                        <td>@Model.Productlist[i].Price</td>
                                        <td>@Model.Productlist[i].Stars</td>
                                        <td>@Model.ProductSayisi[i]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                   
                </div>

                <br /><br /><br />
                <h3>Satılan Menuler ve Sayısı</h3>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="demoGrid22">
                            <thead>
                                <tr>
                                   
                                    <th>Menu Adı</th>
                                    <th>Menu Fiyatı</th>
                                    <th>Menu Açıklama</th>
                                    <th>Menu Satış Miktarı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.MenuNameslist.Count(); i++)
                                {
                                    <tr class="odd gradeX">
                                        
                                        <td>@Model.MenuNameslist[i].MenuName</td>
                                        <td>@Model.MenuNameslist[i].Price</td>
                                        <td>@Model.MenuNameslist[i].Description</td>
                                        <td>@Model.MenuNameSayisi[i]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                 
                </div>

                <br /><br /><br />
                <h3>Satılan Kampanyalar ve Sayısı</h3>

                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="demoGrid33">
                            <thead>
                                <tr>
                                   
                                    <th>Kampanya Adı</th>
                                    <th>Kampanya Fiyatı</th>
                                    
                                    <th>Kampanya Başlangıç Tarihi</th>
                                    <th>Kampanya Bitiş Tarihi</th>
                                    <th>Kampanya Satış Miktarı</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.CampaignPNamelist.Count(); i++)
                                {
                                    <tr class="odd gradeX">
                                        <td>@Model.CampaignPNamelist[i].CampaignName</td>
                                        <td>@Model.CampaignPNamelist[i].Price</td>
                                     
                                        <td>@Model.CampaignPNamelist[i].StartingDate.Value.ToShortDateString()</td>
                                        <td>@Model.CampaignPNamelist[i].EndDate.Value.ToShortDateString()</td>
                                        <td>@Model.KampanyaSayisi[i]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                   
                </div>

            </div>
            <!--End Advanced Tables -->
        </div>
    </div>
</body>
</html>


