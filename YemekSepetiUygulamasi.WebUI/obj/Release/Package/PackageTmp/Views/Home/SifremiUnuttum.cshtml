
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V7</title>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/Login_v7/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v7/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-40 p-b-50">
                @if (TempData["kullanicibilgileri"] != null)
                {
                    <div class="btn btn-danger" style="width:200px; ">
                        @TempData["kullanicibilgileri"]
                    </div>
                }

                <span class="login100-form-title p-b-20">
                    Giriş Yap
                </span>

                <div>
                    <a href="#" class="btn-login-with bg1 m-b-10">
                        <i class="fa fa-facebook-official"></i>
                        Facebook ile Giriş
                    </a>

                    <a href="#" class="btn-login-with bg2">
                        <i class="fa fa-twitter"></i>
                        Twitter ile Giriş
                    </a>
                </div>
                <br />

                @using (Html.BeginForm("SifremiUnuttum", "Home", FormMethod.Post))
                {
                    <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter email: ex@abc.xyz">
                        <input  type="text" class="input100" placeholder="Email Adresi" name="EmailAdresi"/>
    
                        <span class="focus-input100"></span>
                    </div>

                    

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                           Gönder
                        </button>
                    </div>

                  

                }

            </div>
        </div>
    </div>
