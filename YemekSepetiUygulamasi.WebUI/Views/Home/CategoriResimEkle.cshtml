@model YemekSepetiUygulamasi.WebUI.Models.CategoryBilgileri
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Urun Bilgileri Ekleme
            </header>
            <div class="panel-body">
                <div class="form">
                    @using (Html.BeginForm("UrunEkle", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group ">
                            <label for="fullname" class="control-label col-lg-2">Urun Adi <span class="required">*</span></label>
                            <div class="col-lg-10">

                                @Html.TextBoxFor(m => m.Category.Cname, new { placeholder = "urun adi" })
                            </div>
                        </div>
                     
                      
                     
                        <div class="form-group ">
                            <label for="email" class="control-label col-lg-2">Resim Ekle <span class="required">*</span></label>
                            <div class="col-lg-10">

                                @Html.TextBoxFor(m => m.resimbilgi, new { type = "File" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-primary" id="kaydet" type="submit">Kaydet</button>
                                <a href="/Anasayfa/Index" class="btn btn-default">Kapat</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>
    </div>
</div>

